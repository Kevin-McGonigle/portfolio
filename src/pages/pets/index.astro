---
import Layout from "@/layouts/base.astro"
import { buttonVariants } from "@/components/ui/button"
import { cn } from "@/lib/utils"
import {
  Table,
  TableBody,
  TableCell,
  TableHead,
  TableHeader,
  TableRow,
} from "../../components/ui/table"
---

<Layout>
  <h1 class="mb-16 text-4xl">Pets</h1>
  <p class="mb-8">
    Here's a breakdown of everything you need to know about the kiddos.
  </p>
  <h2 class="mb-4 text-2xl">At a glance</h2>
  <Table className="mb-12">
    <TableHeader>
      <TableRow>
        <TableHead />
        <TableHead>Dobby</TableHead>
        <TableHead>Pickle</TableHead>
        <TableHead>Sprout</TableHead>
      </TableRow>
    </TableHeader>
    <TableBody>
      <TableRow>
        <TableCell>
          <strong>Feeding</strong>
        </TableCell>
        <TableCell>
          1 heaped scoop of kibble + 2 tablespoons of chicken & rice, 3 times a
          day
        </TableCell>
        <TableCell> ⅔ scoop of kibble, once a day</TableCell>
        <TableCell>
          35g kibble + 1 small tablespoon of chicken & rice, 3 times a day
        </TableCell>
      </TableRow>
      <TableRow>
        <TableCell>
          <strong>Water</strong>
        </TableCell>
        <TableCell className="text-center" colSpan={3}>
          Water bowls in sitting room and bedroom
        </TableCell>
      </TableRow>
      <TableRow>
        <TableCell>
          <strong>Treats</strong>
        </TableCell>
        <TableCell>1 Bonio (soaked)</TableCell>
        <TableCell>4-5 Tasty Minis</TableCell>
        <TableCell>5-6 Dreamies</TableCell>
      </TableRow>
      <TableRow>
        <TableCell>
          <strong>Medication</strong>
        </TableCell>
        <TableCell>1.5 Thyforon tablets, twice a day</TableCell>
        <TableCell>❌</TableCell>
        <TableCell>❌</TableCell>
      </TableRow>
      <TableRow>
        <TableCell>
          <strong>Litter box</strong>
        </TableCell>
        <TableCell>❌</TableCell>
        <TableCell>Empty twice a day</TableCell>
        <TableCell>❌</TableCell>
      </TableRow>
    </TableBody>
  </Table>
  <h2 class="mb-4 text-2xl">By Pet</h2>
  <div class="flex gap-4 mb-12">
    {
      ["Dobby", "Pickle", "Sprout"].map((pet) => (
        <a
          class={cn(buttonVariants({ variant: "default" }), "flex-1")}
          href={`/pets/${pet.toLowerCase()}`}
        >
          {pet}
        </a>
      ))
    }
  </div>
  <h2 class="mb-4 text-2xl">Vets</h2>
  <div class="flex mb-12">
    <div class="flex-1">
      <h3 class="space-y-2 text-xl">Regular</h3>
      <ul>
        <li>
          <a
            class="underline"
            href="https://www.goddardvetgroup.co.uk/practice/mile-end/"
          >
            Goddard Vets Mile End
          </a>
        </li>
        <li>
          <a href="tel:02089815535">020 8981 5535</a>
        </li>
      </ul>
    </div>
    <div class="flex-1">
      <h3 class="space-y-2 text-xl">Emergency</h3>
      <ul>
        <li>
          <a
            class="underline"
            href="https://www.goddardvetgroup.co.uk/practice/wanstead-veterinary-hospital/"
          >
            Wanstead Veterinary Hospital
          </a>
        </li>
        <li>
          <a href="tel:02089897744">020 8989 7744</a>
        </li>
      </ul>
    </div>
  </div>
</Layout>
